#include <stdio.h>
int main() {
    FILE *fp;
    char name[50];
    fp = fopen("demo.txt", "w");
    if (fp == NULL) {
        printf("Can't open file for writing.\n");
        return 1;
    }
    fprintf(fp, "Hello, world!\n");
    fprintf(fp, "File handling in C is easy.\n");
    fclose(fp);
    fp = fopen("demo.txt", "r");
    if (fp == NULL) {
        printf("Can't open file for reading.\n");
        return 1;
    }
    while (fgets(name, sizeof(name), fp) != NULL) {
        printf("%s", name);
    }
    fclose(fp);
    return 0;
}
